<div class="text-success">
  <%= flash[:success] %>
</div>


<div class="editing">
<p class="midasi">Editing Book</p>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
