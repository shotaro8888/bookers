<div class="text-success">
  <%= flash[:success] %>
</div>

<div class="main">

  <p class="midasi">Books</p>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th></th>
  </tr>
  <tr>
    <td>
    <% @books.each do |book| %>
      <span><%= book.title %></span><br>
    <% end %>
    </td>
    <td>
    <% @books.each do |book| %>
      <span><%= book.body %></span><br>
    <% end %>
    </td>
    <td>
      <% @books.each do |book| %>
        <span>
          <%= link_to "Show", book_path(book.id) %>
        </span>
        <span>
          <%= link_to "Edit", edit_book_path(book.id) %>
        </span>
        <span>
          <%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
        </span>
        <br>
      <% end %>
    </td>
  </tr>
</table>

